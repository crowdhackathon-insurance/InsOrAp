<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.insorama.insoramapp.MainScreen">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statement_theft"
        android:id="@+id/main_screen_theft"
        style="@style/ButtonStyle_NextFragment"
        android:typeface="normal"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:textColor="@drawable/text_color_green_white_selector"
        android:clickable="true"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/main_screen_shatter"
        android:layout_alignLeft="@+id/main_screen_fire"
        android:layout_alignStart="@+id/main_screen_fire" />

    <Button
        style="@style/ButtonStyle_NextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statement_fire"
        android:id="@+id/main_screen_fire"
        android:typeface="normal"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@drawable/text_color_green_white_selector"
        android:clickable="true"
        android:layout_marginBottom="129dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_screen_settings"
        android:text="@string/statement_settings"
        style="@style/ButtonStyle_NextFragment"
        android:typeface="normal"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@drawable/text_color_green_white_selector"
        android:clickable="true"
        android:layout_below="@+id/section_label"
        android:layout_alignLeft="@+id/main_screen_accident"
        android:layout_alignStart="@+id/main_screen_accident"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statement_accident"
        android:id="@+id/main_screen_accident"
        style="@style/ButtonStyle_NextFragment"
        android:typeface="normal"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@drawable/text_color_green_white_selector"
        android:clickable="true"
        android:layout_below="@+id/main_screen_settings"
        android:layout_alignLeft="@+id/main_screen_shatter"
        android:layout_alignStart="@+id/main_screen_shatter"
        android:layout_marginTop="33dp" />

    <Button
        style="@style/ButtonStyle_NextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statement_broken_crystals"
        android:id="@+id/main_screen_shatter"
        android:typeface="normal"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19sp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:textColor="@drawable/text_color_green_white_selector"
        android:clickable="true"
        android:layout_above="@+id/main_screen_fire"
        android:layout_alignLeft="@+id/main_screen_fire"
        android:layout_alignStart="@+id/main_screen_fire"
        android:layout_marginBottom="26dp" />

</RelativeLayout>
